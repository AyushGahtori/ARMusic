<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    tools:context=".activities.MainActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Loops"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvIterations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_alignTop="@+id/ivLoopPlus"
        android:layout_alignBottom="@+id/ivLoopMinus"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="2"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/ivLoopPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginStart="60dp"
        android:src="@drawable/up"
        android:text="&#9650;"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/ivLoopMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivLoopPlus"
        android:layout_marginStart="60dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/down"
        android:text="&#9660;"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnAddLoops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvIterations"
        android:layout_centerHorizontal="true"
        android:text="Add"
        android:textAllCaps="false" />

</RelativeLayout>